<%= form_for @article do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>
  <%= f.label :image, "image" %>
  <%= f.text_area :image %>
  <%= f.collection_radio_buttons :visible_id, Visible.all, :id , :name %>
  <%= f.collection_radio_buttons :category_id, Category.all, :id , :name %>

  <%= f.button  :draft , name: "status",value: "draft"%>
  <%= f.submit %>
<% end %>